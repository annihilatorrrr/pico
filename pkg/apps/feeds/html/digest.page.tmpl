<style>
img {
    max-width: 100%;
    height: auto;
}

.feeds {
    max-width: 100%;
}
</style>

{{if .SizeWarning}}
<blockquote style="color: #ff0000; background-color: #ffe6e6; padding: 10px; border-left: 3px solid #ff0000;">
    WARNING: This email is over the size limit. Inline content has been enabled to avoid email delivery issues.
</blockquote>
{{end}}

{{if .ShowBanner}}
<blockquote>
  In order to keep this digest email active you must <a href="{{.KeepAliveURL}}">click this link</a>.
  You have {{.DaysLeft}} days left.
</blockquote>
{{end}}

<div class="feeds">
  {{range .Feeds}}
  <div style="margin-bottom: 10px;">
    <h1 style="margin-bottom: 3px;"><a href="{{.Link}}">{{.Title}}</a></h1>
    <div>{{.Description}}</div>
  </div>

  <div class="summary">
    <h2>Summary</h2>
    {{range .Items}}
    <ul>
      <li><a href="{{.Link}}">{{.Title}}</a></li>
    </ul>
    {{end}}
    <hr />
  </div>

  {{if $.Options.InlineContent}}
  <div>
    {{range .Items}}
    <div>
      <h1><a href="{{.Link}}">{{.Title}}</a></h1>
      <div>{{.Description}}</div>
      <div>{{.Content}}</div>
    </div>
    <hr />
    {{end}}
  </div>
  {{end}}

  <hr style="margin: 10px 0;" />
  {{end}}
</div>

<blockquote>
  <a href="{{.UnsubURL}}">unsubscribe</a> to this digest.
</blockquote>
